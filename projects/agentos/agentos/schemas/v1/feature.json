{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Feature",
  "type": "object",
  "required": [
    "feature_id",
    "spec_ref",
    "status"
  ],
  "additionalProperties": false,
  "properties": {
    "feature_id": {"type": "string"},
    "spec_ref": {"type": "string"},
    "status": {"type": "string", "enum": ["proposed", "implemented", "shipped"]},
    "notes": {"type": "string"}
  }
}
